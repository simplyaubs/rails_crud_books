<%= form_for @book do |f| %>
<p>
  <%= f.label :name %>
  <%= f.text_field :name %>
</p>
  <p>
    <%= f.label :author %>
    <%= f.text_field :author %>
  </p>
  <p>
    <%= f.submit 'Add book' %>
  </p>
<% end %>

<%= @books.each do |book| %>
<ul>
  <li>
    <%= link_to "#{book.name}", book_path(book) %>, <%= book.author %>
  </li>
</ul>
<% end %>